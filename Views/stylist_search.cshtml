@{
    Layout="Shared/_Layout.cshtml";
}

<div class="well">
  <h2>Search result:</h2>
  @if(@Model.Count== 0)
  {
    <h5> There is no match for your search</h5>
  }
  else
  {
    <ol>
    @foreach (var stylist in @Model)
    {
      <li><a href="/stylists/@stylist.GetId()"> @stylist.GetName() </a></li>
    }
    </ol>
  }
</div>

